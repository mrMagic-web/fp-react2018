.products
  display flex
  flex-wrap wrap
  justify-content center
  padding 0
  ul
    list-style-type none 
  .colors
    position absolute
    bottom 15px
    right 15px
    display flex
    flex-direction column  
  .product-name
    margin 10px 0
    padding-right space * 3
  .description
    margin-bottom 10px 
    padding 15px
    p
      margin-top 0
      padding-right 60px 
      font-size 1.25rem    
    h4
      font-size 1.75rem    
  .product
    text-align left
    padding space
    margin space
    flex 1 1 255px
    display flex
    position relative
    flex-direction column
    border 1px solid gray-lighter
    @media mobile
      flex-direction row
      max-width 100%
      padding 2px
      margin 5px
      .clickable
        flex 1 1 100%
        display flex
        flex-direction row
        align-items center
        .colors 
          bottom auto
        img
          width 90px
          margin 0

    .product-hover
      display none
      button
        width 100%
        margin 10px
        border 1px solid white
        color white
        padding 10px
        &:after
          background-color darken(brand-primary, 30%)
        &.disabled
          opacity .4
          color brand-primart
          background none
          &:hover
            opacity .4
            color brand-primart
            background none
      @media mobile        
        button
          width auto
    &:hover, &:active, &:focus
      .product-hover 
        display flex
        position absolute
        width 100%
        height 100%
        background-color brand-primary
        z-index 2
        opacity .7
        flex-direction: column;
        padding: 15px;
        top 0
        left 0
        justify-content center
        align-items center
        @media mobile
          flex-direction row
          opacity 1
          button
            padding 2px 10px
    img
      width 200px
      margin auto
      display block    

  .expand
    display flex
    width 100%
    position relative
    flex-wrap wrap
    flex-direction row
    @media mobile
      flex-direction column
    .icon-close
      position absolute
      z-index 2
      width 20px
      top 15px
      right 15px
    
    .image 
      width 40%
      padding-right 30px
      @media mobile
        width 100%
        max-width 360px
        margin auto
    .colors
      top 55px !important
      right 15px !important
      height 68px
      span 
        width 32px
        height 32px       
    .size-selection
      padding-inline-start 0
      margin-bottom 15px
    .description
      width 60%
      display flex
      flex-direction column
      justify-content center
      @media mobile
        width 100%
      .cart-buttons
        display flex
        @media mobile
          flex-direction column
        button
          margin 0 10px 5px 0   
      .sizings
        margin-left 20px
        span
          color gray
          margin 0 4px
          text-align center
          padding 2px 6px
          min-width 55px  
      .dimensions, .sizings 
        display flex
        justify-content flex-start
        font-size 1.2rem
        align-content flex-end
        margin-bottom 5px
        align-items flex-end
        padding-inline-start 0
        padding-right 60px
        @media mobile
          max-width 100%
          padding-left: 0
        li 
          flex 0 1 auto
          display flex
          margin 0 4px
          flex-direction column
          text-align center
          justify-content: space-between;
          padding 2px 6px
          min-width 55px          
          b
            text-align center
            display block
            font-size 1rem
            margin-bottom 4px
        small
          width 20px
          font-weight bold
          text-align left
          padding-bottom 5px
      h4
        position relative
        .colors
          position absolute
          right 0
          top 0
    img
      height auto 
      width 100%
      max-height 300px    
    &.top-product 
      order: -1
    
.order-buttons
  margin-top auto 

.gray, .white 
  width 22px 
  height 22px
  border 1px solid lightgray
  display flex
  flex-direction row 
  margin 0 1px
  &:hover
    -webkit-box-shadow 0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 0px 2px 0px rgba(50, 50, 50, 0.5)

.gray 
  margin-top 3px
  background-image url('http://www.fastpack.dk/wp-content/uploads/bag-gray.jpg')
