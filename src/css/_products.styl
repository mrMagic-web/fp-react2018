.products
  display flex
  flex-wrap wrap
  justify-content center
  padding 0 space
  ul
    list-style-type none 
  .colors
    position absolute
    bottom 15px
    right 15px
    display flex
    flex-direction column  
  .product-name
    margin 10px 0
    padding-right space * 3
  .description
    margin-bottom 10px 
    p
      margin-top 0
      padding-right 55px 
      font-size 1.25rem    
    h4
      font-size 1.75rem    
  .product
    text-align left
    padding space
    margin space
    flex 1 1 267px
    max-width 267px
    display flex
    position relative
    flex-direction column
    border 1px solid gray-lighter
    @media mobile
      flex-direction row
      max-width 100%
      padding 2px
      margin 5px
      .clickable
        flex 1 1 100%
        display flex
        flex-direction row
        align-items center
        .colors 
          bottom auto
        img
          width 90px
          margin 0

    .product-hover
      display none
      button
        width 100%
        margin 10px
        border 1px solid white
        color white
        padding 10px
        &:after
          background-color darken(brand-primary, 30%)
        &.disabled
          opacity .4
          color brand-primart
          background none
          &:hover
            opacity .4
            color brand-primart
            background none
      @media mobile        
        button
          width auto
    &:hover, &:active, &:focus
      .product-hover 
        display flex
        position absolute
        width 100%
        height 100%
        background-color brand-primary
        z-index 2
        opacity .7
        flex-direction: column;
        padding: 15px;
        top 0
        left 0
        justify-content center
        align-items center
        @media mobile
          flex-direction row
          opacity 1
          button
            padding 2px 10px
    img
      width 200px
      margin auto
      display block    

  .expand
    display flex
    width 100%
    position relative
    flex-wrap wrap
    flex-direction row
    .icon-close
      position absolute
      z-index 2
      width 20px
      top 15px
      right 15px
    
    .image 
      width 40%
      padding-right 30px
    .colors
      top 15px !important
      right 15px !important
      height 68px
      span 
        width 32px
        height 32px       
    .description
      width 60%
      display flex
      flex-direction column
      justify-content center
      button
        margin-right 10px
      .dimensions 
        max-width 300px
        display flex
        justify-content space-between
        font-size 1.2rem
        align-content flex-end
        margin-bottom: 25px;
        li 
          flex 1 1 auto
          display flex
          margin 0 4px
          flex-direction column
          text-align center
          border-right 1px solid gray-lighter
          &:last-of-type
            border-right none            
          b
            text-align center
            margin-bottom 0
            display block
            font-size 1rem
            height 20px
      h4
        position relative
        .colors
          position absolute
          right 0
          top 0
    img
      height auto 
      width 100%
      max-height 380px    
    

.order-buttons
  margin-top auto 

.gray, .white 
  width 22px 
  height 22px
  border 1px solid lightgray
  display flex
  flex-direction row 
  margin 0 1px
  &:hover
    -webkit-box-shadow 0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 0px 2px 0px rgba(50, 50, 50, 0.5)

.gray 
  margin-top 3px
  background-image url('http://www.fastpack.dk/wp-content/uploads/bag-gray.jpg')
