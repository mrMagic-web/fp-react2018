// Import all partials
@require '_variables.styl'
@require '_selector.styl'
@require './_*.styl'

body, html
  min-width minWidth
.wrapper
  background white

.container
  max-width 1260px
  width 100%
  position relative
  margin 0 auto
    
svg
  stroke black
  fill black
  display: block;
  position: absolute;

.icon-close
  position absolute
  z-index 2
  width 20px
  top 15px
  right 15px
  cursor pointer
  transform rotate(0deg)
  transform-origin 10px 10px
  transition all .2s
  &:hover
    transform rotate(90deg)
.sample
  padding 4rem 2rem

button, input[type=submit]
  text-transform uppercase
  background none
  border 1px solid brand-primary
  font-weight 600
  font-size 1.5rem
  font-family 'OpenSans-Bold'
  transition all 0.2s
  position relative
  z-index 2
  padding 6px 25px
  color brand-primary
  &.whiteBtn
    color white
    border-color white
    &:hover
      color brand-primary
      background-color white
    &:after
      background-color white
  &.disabled
    color gray-light
    background white
    border-color gray-light
    cursor not-allowed
    &:hover
      color gray-light
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background brand-primary
    position absolute
    width 100%
    height 0%
    left 0
    top 0
    transition all 0.2s
  &:hover
    background-color brand-primary 
    color white
    outline 0
    &:after
      height 100%
  