// Import all partials
@require '_variables.styl'
@require './_*.styl'
    
.wrapper
  max-width 1280px
  margin 0 auto
  position relative
  width 100%
  padding 2rem
  background white

.gray, .white 
  width 32px 
  height 32px
  border 1px solid lightgray
  display flex
  flex-direction row 
  margin 0 1px
  &:hover
    -webkit-box-shadow 0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    -moz-box-shadow    0px 0px 2px 0px rgba(50, 50, 50, 0.5)
    box-shadow         0px 0px 2px 0px rgba(50, 50, 50, 0.5)

.gray 
  background-image url('http://www.fastpack.dk/wp-content/uploads/bag-gray.jpg')

svg
  stroke black
  fill black
  display: block;
  position: absolute;
