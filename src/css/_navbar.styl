.topnav-area 
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position relative
  .menu-close
    position absolute
    top 10px
    right 10px
    width 30px
    height 30px
    svg
      width 30px
      height 30px
.topnav
  overflow hidden
  display flex
  margin-left auto
  align-items center
  position: relative
  flex-direction column

  a
    float left
    display block
    color black
    text-align center
    padding 14px 16px
    text-decoration none
    font-size 17px
    &:hover
      background-color #ddd
      color black
    &.icon
      display none
      width 30px
      height 30px
      background-color #ddd 
      margin-right 0
      svg 
        width 30px
        height 30px

.active
  background-color #4CAF50
  color white

@media mobile
  .topnav-area 
    flex-direction column
    
  .topnav
    width 100%
    text-align center
    a
      display none
      &.icon
        float right
        display block

@media mobile
  .topnav
    &.responsive
      position relative
      .icon
        position absolute
        right 0
        top 0
      a
        float none
        display block
        text-align left
        